<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="PlaygroundApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PlaygroundApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView
        x:Name="NavigationController"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        ItemInvoked="OnMenuItemInvoked"
        PaneDisplayMode="Left">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Home Page" Tag="PlaygroundApp.Views.HomePage" />
            <NavigationViewItem Content="Animation Page" Tag="PlaygroundApp.Views.AnimationPage" />
        </NavigationView.MenuItems>


    </NavigationView>

</Window>
